# IQFMP Environment Configuration
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=literal:your_database_url_here
REDIS_URL=redis://localhost:6379/0
QDRANT_URL=http://localhost:6333

# LLM Provider (OpenRouter)
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Default LLM Model
DEFAULT_LLM_MODEL=deepseek/deepseek-chat

# Security
JWT_SECRET_KEY=your_jwt_secret_key_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Celery
CELERY_BROKER_URL=literal:redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Exchange API (Optional - for live trading)
BINANCE_API_KEY=
BINANCE_API_SECRET=
OKX_API_KEY=
OKX_API_SECRET=
OKX_PASSPHRASE=

# Notifications (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
